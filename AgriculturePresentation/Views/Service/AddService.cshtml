@model AgriculturePresentation.Models.ServiceAddViewModel
@{
	ViewData["Title"] = "AddService";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" class="forms-sample">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title text-center">Yeni Hizmet Girişi</h4>
			<div class="form-group">
				<label for="title">Başlık</label>
				<span asp-validation-for="Title" class="text-danger"></span>
				<input type="text" class="form-control" id="title" placeholder="Başlık" asp-for="Title">
			</div>
			<div class="form-group">
				<label for="description">Açıklama</label>
				<span asp-validation-for="Description" class="text-danger"></span>

				<input type="text" class="form-control" id="description" placeholder="Açıklama" asp-for="Description">
			</div>
			<div class="form-group">
				<label for="image">Görsel Yolu</label>
				<span asp-validation-for="Image" class="text-danger"></span>
				<input type="text" class="form-control" id="image" placeholder="Resim" asp-for="Image">
			</div>
			<button type="submit" class="btn btn-success me-2">Ekle</button>
		</div>
	</div>
</form>
