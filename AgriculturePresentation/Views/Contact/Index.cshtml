@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Mesajlar</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Ad Soyad</th>
							<th>Mail</th>
							<th>Tarih</th>
							<th>Mesajı Gör</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Count == 0)
						{
							<tr>
								<td colspan="5" class="text-center text-danger">Mesaj bulunamadı</td>
							</tr>
						}
						else
						{
							@foreach (var contact in Model)
							{
								<tr>
									<td>@contact.ContactID</td>
									<td>@contact.Name</td>
									<td>@contact.Mail</td>
									<td>@contact.Date</td>
									<td>
										<a href="/Contact/Detail/@contact.ContactID" class="btn btn-danger">Mesaj Gör</a>
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
