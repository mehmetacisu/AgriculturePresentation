@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" class="forms-sample">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title text-center">Görsel Düzenleme Formu</h4>
			@Html.HiddenFor(x=>x.ImageID)
			<div class="form-group">
				<label>Başlık</label>
				<span asp-validation-for="Title" class="text-danger"></span>
				<input type="text" class="form-control" asp-for="Title">
			</div>
			<div class="form-group">
				<label>Açıklama</label>
				<span asp-validation-for="Description" class="text-danger"></span>
				<input type="text" class="form-control"asp-for="Description">
			</div>
			<div class="form-group">
				<label for="image">Görsel Yolu</label>
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
				<input type="text" class="form-control" id="image"  asp-for="ImageUrl">
			</div>
			<button type="submit" class="btn btn-success me-2">Kaydet</button>
		</div>
	</div>
</form>

