@model EntityLayer.Concrete.Team

@{
	ViewData["Title"] = "Add";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" class="forms-sample">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title text-center">Yeni Takım Arkadaşı Kaydı</h4>
			<div class="form-group">
				<label for="name">Adı Soyadı</label>
				<span asp-validation-for="PersonName" class="text-danger"></span>
				<input type="text" class="form-control" id="name" asp-for="PersonName">
			</div>
			<div class="form-group">
				<label for="Title">Görev</label>
				<span asp-validation-for="Title" class="text-danger"></span>
				<input type="text" class="form-control" id="Title" asp-for="Title">
			</div>
			<div class="form-group">
				<label for="image">Görsel Yolu</label>
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
				<input type="text" class="form-control" id="image"  asp-for="ImageUrl">
			</div>
			<div class="form-group">
				<label for="image">Facebook Linki</label>
				<span asp-validation-for="FacebookUrl" class="text-danger"></span>
				<input type="text" class="form-control" id="image"  asp-for="FacebookUrl">
			</div>
			<div class="form-group">
				<label for="image">Instagram Linki</label>
				<span asp-validation-for="InstagramUrl" class="text-danger"></span>
				<input type="text" class="form-control" id="image"  asp-for="InstagramUrl">
			</div>
			<div class="form-group">
				<label for="image">Twitter Linki</label>
				<span asp-validation-for="TwitterUrl" class="text-danger"></span>
				<input type="text" class="form-control" id="image"  asp-for="TwitterUrl">
			</div>
			<div class="form-group">
				<label for="image">WebSite Linki</label>
				<span asp-validation-for="WebSiteUrl" class="text-danger"></span>
				<input type="text" class="form-control" id="image"  asp-for="WebSiteUrl">
			</div>
			<button type="submit" class="btn btn-success me-2">Kaydet</button>
		</div>
	</div>
</form>