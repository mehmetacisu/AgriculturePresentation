@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Adres Bilgisi</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Açıklama 1</th>
							<th>Açıklama 2</th>
							<th>Açıklama 3</th>
							<th>Açıklama 4</th>
							<th>Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Count == 0)
						{
							<tr>
								<td colspan="5" class="text-center text-danger">Adres bulunamadı</td>
							</tr>
						}
						else
						{
							@foreach (var address in Model)
							{
								<tr>
									<td>@address.Description1</td>
									<td>@address.Description2</td>
									<td>@address.Description3</td>
									<td>@address.Description4</td>
									<td>
										<a href="/Address/Edit/@address.AddressID" class="btn btn-warning">Güncelle</a>
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

