@model AgriculturePresentation.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" class="forms-sample">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title text-center">Profil Düzenleme Formu</h4>
			<div class="form-group">
				<label>Mail Adresi</label>
				<input type="text" class="form-control" asp-for="Mail" placeholder="Mail Adresi">
			</div>
			<div class="form-group">
				<label>Telefon Numarası</label>
				<input type="text" class="form-control"asp-for="Phone" placeholder="Telefon Numarası">
			</div>
				<div class="form-group">
				<label>Şifre</label>
				<input type="text" class="form-control"asp-for="Password" placeholder="Şifre">
			</div>
				<div class="form-group">
				<label>Şifre Tekrar</label>
				<input type="text" class="form-control"asp-for="ConfirmPassword" placeholder="Şifre Tekrar">
			</div>
			<button type="submit" class="btn btn-success me-2">Kaydet</button>
		</div>
	</div>
</form>



