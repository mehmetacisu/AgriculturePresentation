@using EntityLayer.Concrete
@model List<Announcement>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Listesi</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Başlık</th>
		<th>Tarih</th>
		<th>Durum</th>
		<th>İşlemler</th>
	</tr>
	@foreach (var announcement in Model)
	{
		<tr>
			<td>@announcement.AnnouncementID</td>
			<td>@announcement.Title</td>
			<td>@announcement.Date.ToString("dd-MM-yyyy")</td>
			<td>
				@if (announcement.Status == true)
				{
					<a href="/Announcement/Passive/@announcement.AnnouncementID" class="btn btn-outline-danger">Pasif Yap</a>
				}
				else
				{
					<a href="/Announcement/Active/@announcement.AnnouncementID" class="btn btn-outline-success">Aktif Yap</a>
				}
			</td>
			<td>
				<a href="/Announcement/Delete/@announcement.AnnouncementID" class="btn btn-danger">Sil</a>
				<a href="/Announcement/Update/@announcement.AnnouncementID" class="btn btn-warning">Düzenle</a>
			</td>
		</tr>
	}
</table>
<a href="/Announcement/Add/" class="btn btn-outline-success">Yeni Duyuru Girişi</a>

